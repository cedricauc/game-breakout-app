<main class="position-static">

<div class="container">
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card card-body text-center text-bg-dark p-4 my-5">
                <h1 class="text-center mb-3">
                    <i class="fa-solid fa-file-pen"></i> S'inscrire
                </h1>
                <%- include ('messages') %>
                <form action="/users/register" method="post">
                    <div class="form-group mb-3">
                        <label for="username" class="form-label fs-6">Pseudo</label>
                        <input class="form-control"
                               id="username"
                               name="username"
                               type="name"
                               autocomplete="username"
                               value="<%= typeof name != 'undefined' ? surname : '' %>"
                               required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email" class="form-label fs-6">Email</label>
                        <input class="form-control"
                               id="email"
                               name="email"
                               type="mail"
                               autocomplete="email"
                               value="<%= typeof email != 'undefined' ? email : '' %>"
                               required/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="form-label fs-6">Mot de passe</label>
                        <input class="form-control"
                               id="password"
                               name="password"
                               type="password"
                               autocomplete="password"
                               value="<%= typeof password != 'undefined' ? password : '' %>"
                               required/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="passwordCfm" class="form-label fs-6">Confirmer le mot de pass</label>
                        <input class="form-control"
                               id="passwordCfm"
                               name="passwordCfm"
                               type="password"
                               value="<%= typeof password2 != 'undefined' ? passwordCfm : '' %>"
                               required/>
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary form-control mt-3 ">S'inscrire</button>
                </form>
                <p class="mt-4 fs-6">Vous avez déjà un compte? <a class="link-light" href="/users/login">Se connecter</a></p>
            </div>
        </div>
    </div>
</div>

</main>