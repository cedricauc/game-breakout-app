<%- include('./partials/nav', {user: user, flag:flag, gamesNbr:gamesNbr, lives:lives, level:level, action:'shop'}) %>

<main class="position-static">

    <!-- section -->
    <section class="position-static bg-transparent" id="section-shop">
        <div class="container">
            <div class="text-white mt-5">
                <div class="d-flex justify-content-center mb-4">
                    <h2 class="text-light fs-3">Boutique</h2>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="card bg-dark p-3" style="width: 18rem;">
                        <p class="card-text text-light fs-6">Points disponibles : <%= points %></p>
                        <p class="card-text text-light fs-6">Jeux disponibles : <%= gamesNbr %></p>
                        <p class="card-text text-light fs-6">Jeu : 5 points</p>
                        <% if(points >= 5) {%>
                            <form action="/shop" method="post">
                                <button class="btn btn-lg btn-outline-info btn-block p-2 mx-2">Utiliser les points</button>
                            </form>
                        <% } %>
                        <form action="#" method="post">
                            <button class="btn btn-lg btn-outline-info btn-block p-2 mx-2">Acheter des points</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>



