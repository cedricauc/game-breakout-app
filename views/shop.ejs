<%- include('./partials/nav', {flag:flag, lives:lives, level:level, action:'game'}) %>

<!-- section -->
<section class="bg-transparent" id="section-shop">
    <div class="position-relative my-5 mx-5 h-75">
        <div class="container text-white">
            <div class="d-flex justify-content-center mb-4">
                <h2 class="text-light">Boutique</h2>
            </div>
            <div class="d-flex justify-content-center">
                <div class="card bg-dark p-3" style="width: 18rem;">
                    <p class="card-text text-light">Points disponibles : <%= points %></p>
                    <p class="card-text text-light">Jeux disponibles : <%= gamesNbr %></p> 
                    <p class="card-text text-light">Jeu : 5 points</p>
                    <% if(points >= 5) {%>
                        <form action="/shop" method="post">
                            <button class="btn btn-outline-info btn p-2 text-info btn-block mt-2 mb-2">Utiliser les points</button>
                        </form>
                    <% } %>
                    <form action="#" method="">
                        <button class="btn btn-outline-info btn p-2 btn-block mt-2 mb-2">Acheter des points</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>