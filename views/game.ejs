<main class="container-fluid m-0 bg-dark vh-100">

    <div class="row h-100 ">
        <div class="col-md-12">
            <div class="container h-100">

                <nav class="bg-primary">
                    <div class="row">
                        <!-- link -->
                        <div class="col-12 col-md-4">
                            <div class="flex p-4">
                                <h2 class="text-center mb-3">
                                    <a class="text-black" href="">
                                        <i class="fa-solid fa-home"></i>
                                    </a>
                                </h2>
                            </div>
                        </div>
                        <!-- stats -->
                        <div class="col-12 col-md-8">
                            <div class="d-flex justify-content-around flex-row">
                            <div class="d-flex align-items-start flex-column m-2">
                                <div class="mb-2 p-2 bg-light" style="min-width:200px">
                                    <div class="fw-bold">Lives: <span class="live-text">1</span></div>
                                </div>
                                <div class="mb-2 p-2 bg-light" style="min-width:200px">
                                    <div class="fw-bold">Score: <span class="score-text">100</span></div>
                                </div>
                            </div>
                            <div class="d-flex align-items-start flex-column m-2">
                                <div class="mb-2 p-2 bg-light" style="min-width:200px">
                                    <div class="fw-bold">Level: <span class="level-text">1</span></div>
                                </div>
                                <div class="mb-2 p-2 bg-light" style="min-width:200px">
                                    <div class="fw-bold">Time: <span class="timer-text">1</span></div>
                                </div>
                            </div>
                            </div>

                        </div>
                    </div>
                </nav>

                <section class="h-75 bg-transparent">
                    <div class="d-flex justify-content-center align-items-center flex-column h-100">
                        <!-- start area-->
                        <div class="d-flex align-content-center flex-wrap mb-3" id="start-area">
                            <form method="POST" id="startGame">
                                <input type="hidden" value=<%= user %> id="username" name="username" >
                                <button class="btn btn-primary btn-lg" id="start" type="submit">
                                    JOUER
                                </button>
                            </form>
                        </div>

                        <!-- game area -->
                        <div class="d-none d-flex align-content-center flex-wrap mb-3" id="game-card">
                            <div class="content content--canvas"></div>
                        </div>

                        <!-- restart area-->
                        <div class="d-none d-flex align-content-center flex-wrap mb-3" id="restart-area">

                                <form method="POST" id="restartGame">
                                    <div class="d-flex justify-content-center">
                                        <button
                                                class="btn btn-primary btn-lg"
                                                id="restart"
                                                type="submit"
                                        >
                                            REJOUER
                                        </button>
                                    </div>
                                </form>

                        </div>

                        <!-- waiting area -->
                        <div class="d-none d-flex align-content-center flex-wrap mb-3" id="waiting-area">

                                <form method="POST" id="waitingGame">
                                    <div class="d-flex justify-content-center">
                                        <button
                                                class="btn btn-primary btn-lg"
                                                id="waiting"
                                                type="submit"
                                        >
                                            CONTINUER
                                        </button>
                                    </div>
                                </form>

                        </div>

                        <!-- notification -->
                        <div class="d-none d-flex align-content-center flex-wrap mb-3" id="notification-card">
                            <div class="alert text-center fs-5" role="alert" id="notification-message"></div>
                        </div>

                    </div>
                </section>

            </div>
        </div>
    </div>

</main>



