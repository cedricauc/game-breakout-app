<!-- navigation -->
<nav class="bg-primary">
    <div class="row">
        <div class="col-12">
            <h5 class="ps-3 pt-2 text-body">
                Bienvenue <span class="badge bg-dark p-1 px-2 pb-2 text-info" id="username"><%= user %></span> :
                <% if (flag) { %>
                    <span class="font-weight-light"> 1 jeu gratuit</span>
                <% }  %>
            </h5>
        </div>
    </div>
    <div class="row">
        <!-- link -->
        <div class="col-12 col-md-4">
            <div class="p-4 pe-0">
                <ul class="nav d-flex justify-content-between">
                    <li class="nav-item">
                        <a class="nav-link active text-black" href="/game">
                            <i class="fa-solid fa-home"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="/shop">
                            <i class="fa-solid fa-shopping-cart"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="/trophy">
                            <i class="fa-solid fa-trophy"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- stats -->
        <div class="col-12 col-md-8">
            <div class="d-flex justify-content-around flex-row">
                <div class="d-flex align-items-start flex-column m-2">
                    <div class="mb-2 p-2 bg-light" style="min-width:200px">
                        <div class="fw-bold">Lives: <span class="live-text"><%= lives %></span></div>
                    </div>
                    <div class="mb-2 p-2 bg-light" style="min-width:200px">
                        <div class="fw-bold">Score: <span class="score-text"></span></div>
                    </div>
                </div>
                <div class="d-flex align-items-start flex-column m-2">
                    <div class="mb-2 p-2 bg-light" style="min-width:200px">
                        <div class="fw-bold">Level: <span class="level-text"><%= level %></span></div>
                    </div>
                    <div class="mb-2 p-2 bg-light" style="min-width:200px">
                        <div class="fw-bold">Time: <span class="timer-text"></span></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</nav>
<!-- section -->
<section class="bg-transparent">
    <div class="position-relative my-5 mx-5 h-75">
        <div class="d-flex justify-content-center align-items-center flex-column h-75">
            <!-- start area-->
            <div class="d-flex align-content-center flex-wrap mb-3" id="start-area">
                <% if (flag) { %>
                    <button class="btn btn-primary btn-lg" id="startGame">
                        JOUER
                    </button>
                    <% } else {%>
                        <form action="/shop" method="post">
                            <% if(msg != "") {%>
                                <p class="text-white"><%= msg  %></p>
                            <% } %>
                            <button class="btn btn-primary btn-lg">Boutique</button>
                        </form>
                    <% } %>
            </div>

            <!-- game area -->
            <div class="d-none d-flex align-content-center flex-wrap mb-3" id="game-card">
                <div class="content content--canvas"></div>
            </div>

            <!-- restart area-->
            <div class="d-none d-flex align-content-center flex-wrap mb-3" id="restart-area">

                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary btn-lg" id="restartGame">
                        REJOUER
                    </button>
                </div>

            </div>

            <!-- waiting area-->
            <div class="d-none d-flex align-content-center flex-wrap mb-3" id="waiting-area">

                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary btn-lg" id="nextGame">
                        CONTINUER
                    </button>
                </div>

            </div>

            <!-- notification -->
            <div class="d-none d-flex align-content-center flex-wrap mb-3" id="notification-card">
                <div class="alert text-center fs-5" role="alert" id="notification-message"></div>
            </div>

        </div>
    </div>
</section>




